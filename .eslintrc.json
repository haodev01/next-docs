{
  "extends": ["next/core-web-vitals", "next/typescript", "airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "rules": {
    "no-shadow": "off",
    "arrow-body-style": "off",
    "import/extensions": "off",
    "curly": ["error", "multi"],
    "react/button-has-type": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": "off",
    "import/prefer-default-export": "off",
    "semi": 0,
    "react/function-component-definition": "off",
    "indent": "off",
    "max-len": "off",
    "comma-dangle": "off",
    "no-redeclare": "off", // let it handle by TypeScript
    "react/jsx-indent": "off",
    "no-unused-vars": "off", // let it handle by TypeScript
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "operator-linebreak": "off",
    "object-curly-newline": "off",
    "function-paren-newline": "off",
    "implicit-arrow-linebreak": "off",
    "react/require-default-props": "off", // let it handle by TypeScript
    "nonblock-statement-body-position": "off",
    "react/jsx-one-expression-per-line": "off",
    "import/no-extraneous-dependencies": "off",
    "react/jsx-no-useless-fragment": "off"
  }
}
